@page "{id:int}"
@model TaskTracker.Pages.Projects.DeleteModel
@{
    ViewData["Title"] = "Delete Project";
}

<div class="container mt-5">
    <div class="card border-danger shadow-sm">
        <div class="card-header bg-danger text-white">
            <h4 class="mb-0">🗑️ Delete Project</h4>
        </div>

        <div class="card-body">
            <p class="fs-5 text-danger">Are you sure you want to permanently delete this project?</p>

            <div class="mb-3 ps-2">
                <p><strong>📁 Name:</strong> @Model.Project.Name</p>
                <p><strong>📝 Description:</strong> @Model.Project.Description</p>
            </div>

            <form method="post">
                <input type="hidden" asp-for="Project.ProjectId" />
                <div class="d-flex justify-content-between">
                    <a asp-page="./Index" class="btn btn-outline-secondary">← Cancel</a>
                    <button type="submit" class="btn btn-danger">🔥 Yes, Delete</button>
                </div>
            </form>
        </div>
    </div>
</div>
