@page "{id:int}"
@model TaskTracker.Pages.Tasks.DeleteModel
@{
    ViewData["Title"] = "Delete Task";
}

<div class="container mt-5">
    <div class="card border-danger shadow-sm">
        <div class="card-header bg-danger text-white">
            <h4 class="mb-0">⚠️ Confirm Task Deletion</h4>
        </div>

        <div class="card-body">
            <p class="mb-3 text-danger">
                Are you sure you want to permanently delete this task? This action cannot be undone.
            </p>

            <ul class="list-group list-group-flush mb-3">
                <li class="list-group-item"><strong>📌 Title:</strong> @Model.TaskItem.Title</li>
                <li class="list-group-item"><strong>📊 Status:</strong> @Model.TaskItem.Status</li>
                <li class="list-group-item"><strong>📅 Due Date:</strong> @Model.TaskItem.DueDate.ToShortDateString()</li>
            </ul>

            <form method="post" class="d-flex gap-2">
                <input type="hidden" asp-for="TaskItem.TaskItemId" />
                <input type="hidden" asp-for="TaskItem.ProjectId" />
                <button type="submit" class="btn btn-danger">🗑️ Yes, Delete</button>
                <a asp-page="/Projects/Details" asp-route-id="@Model.TaskItem.ProjectId" class="btn btn-outline-secondary">← Cancel</a>
            </form>
        </div>
    </div>
</div>
