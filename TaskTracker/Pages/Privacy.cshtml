@page
@model PrivacyModel
@{
    ViewData["Title"] = "Privacy Policy";
}

<div class="container mt-5">
    <div class="card shadow-sm border-0">
        <div class="card-header bg-secondary text-white">
            <h4 class="mb-0">🔐 Privacy Policy</h4>
        </div>
        <div class="card-body">
            <p>
                TaskTracker respects your privacy. This application does not collect or store any personal information unless explicitly required for task and project management.
            </p>
            <ul>
                <li>No tracking or analytics.</li>
                <li>No personal data is shared with third parties.</li>
                <li>All project data stays within your secure environment.</li>
            </ul>
            <p class="text-muted mt-3">
                For any questions or concerns, please contact your system administrator.
            </p>
        </div>
    </div>
</div>
